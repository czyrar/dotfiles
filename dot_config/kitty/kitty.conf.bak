font_family family='Maple Mono NF' postscript_name=MapleMono-NF-Regular
font_size 13.0
bold_font auto
italic_font auto
bold_italic_font auto
font_features MapleMono-NF-Regular +cv01 +cv02 +cv33 +cv34 +cv35 +cv36 +cv61 +cv62 +ss03 +ss05 +ss06 +ss07 +ss08 +ss09 +ss10
font_features MapleMono-NF-Bold +cv01 +cv02 +cv33 +cv34 +cv35 +cv36 +cv61 +cv62 +ss03 +ss05 +ss06 +ss07 +ss08 +ss09 +ss10

# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME

tab_bar_min_tabs            1
tab_bar_edge                bottom
tab_bar_style               powerline
tab_powerline_style         slanted
tab_title_template          {title}{' :{}:'.format(num_windows) if num_windows > 1 else ''}

enabled_layouts tall
