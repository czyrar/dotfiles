# ===================== KEYBINDS ==================================
# Apps
bindsym --no-repeat $mod+Return exec $term
bindsym --no-repeat $mod+e exec $file_explorer
bindsym --no-repeat $mod+d exec $launcher
bindsym --no-repeat $mod+m exec $menu
bindsym --no-repeat $mod+Shift+s exec $fast_screenshot
bindsym --no-repeat Print exec $screenshot
bindsym --no-repeat Control+Shift+Escape exec $admin
# Sway
bindsym --no-repeat $mod+f fullscreen
bindsym --no-repeat $mod+q kill
bindsym --no-repeat $mod+Shift+r reload
bindsym --no-repeat $mod+Shift+space floating toggle
floating_modifier $mod normal
# Movement
bindsym --no-repeat $mod+l focus right
bindsym --no-repeat $mod+k focus up
bindsym --no-repeat $mod+j focus down
bindsym --no-repeat $mod+h focus left
bindsym --no-repeat $mod+Right focus right
bindsym --no-repeat $mod+Up focus up
bindsym --no-repeat $mod+Down focus down
bindsym --no-repeat $mod+Left focus left
bindsym --no-repeat $mod+Shift+l move right
bindsym --no-repeat $mod+Shift+k move up
bindsym --no-repeat $mod+Shift+j move down
bindsym --no-repeat $mod+Shift+h move left
bindsym --no-repeat $mod+Shift+Right move right
bindsym --no-repeat $mod+Shift+Up move up
bindsym --no-repeat $mod+Shift+Down move down
bindsym --no-repeat $mod+Shift+Left move left
# Resize
mode "resize" {
  bindsym $mod+l resize grow width 10px
  bindsym $mod+k resize shrink height 10px
  bindsym $mod+j resize grow height 10px
  bindsym $mod+h resize shrink width 10px
  bindsym $mod+Right resize grow width 10px
  bindsym $mod+Up resize shrink height 10px
  bindsym $mod+Down resize grow height 10px
  bindsym $mod+Left resize shrink width 10px
  # Return to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
#Workspaces
bindsym --no-repeat $mod+1 workspace number 1
bindsym --no-repeat $mod+2 workspace number 2
bindsym --no-repeat $mod+3 workspace number 3
bindsym --no-repeat $mod+4 workspace number 4
bindsym --no-repeat $mod+5 workspace number 5
bindsym --no-repeat $mod+6 workspace number 6
bindsym --no-repeat $mod+7 workspace number 7
bindsym --no-repeat $mod+8 workspace number 8
bindsym --no-repeat $mod+9 workspace number 9
bindsym --no-repeat $mod+0 workspace number 10
bindsym --no-repeat $mod+Shift+1 move container to workspace number 1
bindsym --no-repeat $mod+Shift+2 move container to workspace number 2
bindsym --no-repeat $mod+Shift+3 move container to workspace number 3
bindsym --no-repeat $mod+Shift+4 move container to workspace number 4
bindsym --no-repeat $mod+Shift+5 move container to workspace number 5
bindsym --no-repeat $mod+Shift+6 move container to workspace number 6
bindsym --no-repeat $mod+Shift+7 move container to workspace number 7
bindsym --no-repeat $mod+Shift+8 move container to workspace number 8
bindsym --no-repeat $mod+Shift+9 move container to workspace number 9
bindsym --no-repeat $mod+Shift+0 move container to workspace number 10
bindsym --no-repeat $mod+a focus parent
# Multimedia keys
bindsym --locked XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_SINK@ 5%+ --limit 1
bindsym --locked XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_SINK@ 5%-
bindsym --locked XF86AudioMute exec wpctl set-mute @DEFAULT_SINK@ toggle
bindsym --locked XF86AudioMicMute exec wpctl set-mute @DEFAULT_SOURCE@ toggle
bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioStop exec playerctl stop
bindsym --locked XF86AudioPrev exec playerctl previous
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86MonBrightnessUp exec brightnessctl s 10%+
bindsym --locked XF86MonBrightnessDown exec brightnessctl s 10%-
bindsym --locked XF86Search exec $menu
{{- if ne .chezmoi.hostname "nona" }}
# Recording
bindsym --no-repeat $mod+F10 exec $save_replay
{{- end }}
# =================================================================

# ===================== WINDOW RULES ==============================
# Games -> floating, fullscreen, no idle if focused, tearing
for_window [class="steam_app.*"] inhibit_idle focus; floating enable; fullscreen enable; allow_tearing yes
# Waybar -> floating, upper right position (except btop centered)
for_window [app_id="^(impala|wiremix|bluetui)$"] floating enable; resize set 800px 700px; move position 1122px 1px
for_window [app_id="^btop$"] floating enable; resize set 1600px 1000px; move position center
# Videos (VLC is buggy) -> floating, 720p default, no idle if fullscreen
for_window [app_id="^mpv$"] inhibit_idle fullscreen; floating enable; resize set 1280px 720px
# Pickers, screen-sharing, ... -> floating, no idle
for_window [app_id="^xdg-desktop-portal-(wlr|gtk)$"] inhibit_idle open; floating enable
# KeePassXC -> floating, upper right position
for_window [app_id="^org.keepassxc.KeePassXC$"] floating enable; resize set 800px 700px; move position 1122px 1px
# VMD -> floating
for_window [app_id="^(Display|FLTK|Toplevel)$"] floating enable;
# =================================================================

include /etc/sway/config.d/*
