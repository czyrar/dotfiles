# ===================== OUTPUT ====================================
# Monitors
# enter `swaymsg -t get_outputs` to get your monitor details.
{{- if eq .chezmoi.hostname "harrow" }}
# output DP-1 pos 0 0 res 1920x1080@175.000Hz
# output DP-2 pos -1920 0 res 1920x1080@60.000Hz
output DP-3 pos 0 0 res 1920x1080@60.000Hz
output HDMI-A-1 pos 1920 0 res 1920x1080@60.000Hz
{{- else if eq .chezmoi.hostname "nona" }}
output eDP-1 pos 0 0 res 1920x1080@60.000Hz
{{- end }}
{{- if eq .chezmoi.hostname "harrow" }}
# Workspaces
workspace 1 output DP-1 DP-3
workspace 3 output DP-1 DP-3
workspace 5 output DP-1 DP-3
workspace 7 output DP-1 DP-3
workspace 9 output DP-1 DP-3
workspace 2 output DP-2 HDMI-A-1
workspace 4 output DP-2 HDMI-A-1
workspace 6 output DP-2 HDMI-A-1
workspace 8 output DP-2 HDMI-A-1
workspace 10 output DP-2 HDMI-A-1
# Disable V-sync for games
output DP-1 allow_tearing yes
output DP-1 max_render_time off
{{- end }}
# =================================================================

# ===================== EXEC ======================================
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec dunst
exec swww-daemon
# Idle
exec swayidle -w \
  timeout 300 "sh $HOME/.config/gtklock/prepare_gtklock.sh; gtklock" \
  timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
  before-sleep "sh $HOME/.config/gtklock/prepare_gtklock.sh; gtklock"
# =================================================================

# ===================== VARIABLES =================================
# Super key
set $mod Mod4
# Apps
set $term            foot
set $file_explorer   nemo
set $menu            pgrep wlogout && killall wlogout || wlogout --buttons-per-row 2 --row-spacing 5 --column-spacing 5
set $launcher        pgrep rofi && killall rofi || rofi -modes "drun,calc,window" -show drun
set $admin           pgrep btop && killall btop || foot --app-id btop btop
set $fast_screenshot grim -g "$(slurp)" - | wl-copy
set $screenshot      grim -g "$(slurp)" - | swappy -f -
set $save_replay     killall -SIGUSR1 gpu-screen-recorder && sleep 0.5 && notify-send -t 1500 -u low -- "GPU Screen Recorder" "Replay saved"
# =================================================================

# ===================== INPUT =====================================
input type:keyboard {
  xkb_layout "us,es"
  xkb_variant "altgr-intl,winkeys"
  xkb_options "grp:alt_shift_toggle"
  repeat_rate 35
  repeat_delay 200
}

input type:pointer {
  accel_profile "flat"
  pointer_accel 0
}

input type:touchpad {
  natural_scroll enabled
}

input type:tablet_tool {
{{- if eq .chezmoi.hostname "harrow" }}
  # map_to_output DP-1
  map_to_output DP-3
{{- else if eq .chezmoi.hostname "nona" }}
  map_to_outpute eDP-1
{{- end }}
}
